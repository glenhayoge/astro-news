---
import type { Post } from '@data/post';
const post: Post = Astro.props.post;

interface ImageMetadata {
  src: string;
  width: number;
  height: number;
  format: string;
  alt: string; // Added for image alt attribute
}
---

<div class="py-6 flex flex-row-reverse gap-6 md:gap-10 items-start">
  {post.img && (
    <a href={`/${post.slug}`} class="shrink-0">
      <img
        src={post.img.toString()}
        alt={post.title} // Using alt from Post interface
        width="160"
        height="160"
        class="w-12 h-12 md:w-32 md:h-32 rounded bg-base-200 object-cover"
      />
    </a>
  )}
  <div class="flex flex-col gap-4 border-b border-dashed border-base-300 pl-4 pb-6">
    <h2 class="text-2xl font-bold">
      <a class="hover:underline" href={`/${post.slug}`}>{post.title}</a>
    </h2>
    <p class="text-sm text-base-content/70">{post.desc}</p>
  </div>
</div>