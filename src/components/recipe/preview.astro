---
import type { Recipe } from '@data/recipe';
const recipe: Recipe = Astro.props.recipe;

interface ImageMetadata {
  src: string;
  width: number;
  height: number;
  format: string;
  alt: boolean; // Added for image alt attribute
}
---

<div class="py-6 flex flex-row-reverse gap-6 md:gap-10 items-start">
  {recipe.img && (
    <a href={`/${recipe.slug}`} class="shrink-0">
      <img
        src={recipe.img.toString()}
        alt={recipe.title} // Using alt from Post interface
        width="160"
        height="160"
        class="w-12 h-12 md:w-32 md:h-32 rounded bg-base-200 object-cover"
      />
    </a>
  )}
  <div class="flex flex-col gap-4 border-b border-dashed border-base-300 pl-4 pb-6">
    <h2 class="text-2xl font-bold">
      <a class="hover:underline" href={`/${recipe.slug}`}>{recipe.title}</a>
    </h2>
    <p class="text-sm text-base-content/70">{recipe.desc}</p>
  </div>
</div>
