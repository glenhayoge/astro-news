---
import { published } from "@data/post"
import Blog from "@layouts/blog";
import Preview from "@components/blog/preview";

const markdownFiles = await Astro.glob('../content/**/*.md')
const posts = published( markdownFiles );
---

<Blog>
	<div class="hero min-h-96" style="background-image: url(https://ascensionmag.com/wp-content/uploads/2016/10/Image-2.jpg);">
		<div class="hero-overlay bg-opacity-60"></div>
		<div class="hero-content text-center text-neutral-content">
		  <div class="max-w-md">
			<!-- <h1 class="mb-5 text-5xl font-bold">FoodBilum</h1> -->
			<p class="mb-5">Stories & pictures of Papua New Guinea & Pacific Food & the Rich Culinary Heritage & Practices</p>
			<button class="btn btn-green">Explore!</button>
		  </div>
		</div>
	  </div>
	  <caption >
		<p class="text-xs pt-2 text-gray-500">Bilum, Photography by Ranu James</p>
	  </caption>
	 
		{posts.map((p) => <Preview post={p} />)}
	</div>
</Blog>
